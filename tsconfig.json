{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "emitDeclarationOnly": false,
  },
  "include": [
    "bin/index.ts",
    "lib/**/*",
    "models/**/*",
    "style/**/*",
    "template/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}